{
	"name": "cerial",
	"version": "0.0.2",
	"description": "Serialization and deserialization made easy",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		"./*": "./dist/*"
	},
	"type": "module",
	"scripts": {
		"format:check": "prettier --check . --ignore-path .gitignore",
		"format": "prettier --write . --ignore-path .gitignore",
		"lint": "eslint src && tsc --noEmit",
		"build": "rm -rf dist && tsc -p tsconfig.json",
		"build:docs": "typedoc src/index.ts --out docs",
		"test": "jest",
		"prepublishOnly": "npm run format && npm run lint && npm run build"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/dr-vortex/cerial.git"
	},
	"keywords": [
		"serial",
		"serialize"
	],
	"author": "Dr. Vortex",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/dr-vortex/cerial/issues"
	},
	"homepage": "https://github.com/dr-vortex/cerial#readme",
	"devDependencies": {
		"@types/jest": "^29.5.3",
		"@typescript-eslint/eslint-plugin": "^6.2.0",
		"@typescript-eslint/parser": "^6.2.0",
		"eslint": "^8.45.0",
		"jest": "^29.6.1",
		"prettier": "^3.0.0",
		"ts-jest": "^29.1.1",
		"typedoc": "^0.24.8",
		"typescript": "^5.1.6"
	}
}
